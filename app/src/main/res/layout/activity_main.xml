<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:text="Shop Inventory App"
        android:textAlignment="center"
        android:textColor="#212121"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- First Row: Add Products & Reports -->
    <LinearLayout
        android:id="@+id/firstRowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Add Products -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnAddProducts"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/add"
                android:background="@android:color/transparent"
                android:contentDescription="Add Products"
                android:scaleType="fitCenter"
                app:tint="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Products"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Reports -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnReports"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/reports"
                android:background="@android:color/transparent"
                android:contentDescription="Reports"
                android:scaleType="fitCenter"
                app:tint="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reports"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Second Row: Restock Products & Sold Products -->
    <LinearLayout
        android:id="@+id/secondRowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/firstRowLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Restock Products -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnRestockProducts"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/restock"
                android:background="@android:color/transparent"
                android:contentDescription="Restock Products"
                android:scaleType="fitCenter"
                app:tint="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restock Products"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Sold Products -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnSoldProducts"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/sold"
                android:background="@android:color/transparent"
                android:contentDescription="Sold Products"
                android:scaleType="fitCenter"
                app:tint="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sold Products"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
    <!--<TextView
        android:id="@+id/db_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checking DB..."
        android:textSize="16sp"
        android:textColor="#FF5722"
        app:layout_constraintTop_toBottomOf="@id/secondRowLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
