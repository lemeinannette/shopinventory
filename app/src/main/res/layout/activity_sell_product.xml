<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SellProductActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/titleSellProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sell Product"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Product Dropdown -->
    <Spinner
        android:id="@+id/productDropdown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toBottomOf="@id/titleSellProduct"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Quantity Input -->
    <EditText
        android:id="@+id/quantityInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Quantity"
        android:inputType="number"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/productDropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Price Input -->
    <EditText
        android:id="@+id/priceInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/quantityInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Buttons as ImageButtons with labels -->
    <LinearLayout
        android:id="@+id/backLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/priceInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/saveLayout"
        android:layout_marginTop="40dp">

        <ImageButton
            android:id="@+id/backHomeButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/back"
            android:background="@android:color/transparent"
            android:contentDescription="Back Home"
            android:scaleType="fitCenter"
            app:tint="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back Home"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/saveLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/priceInput"
        app:layout_constraintStart_toEndOf="@id/backLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp">

        <ImageButton
            android:id="@+id/saveChangesButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/save"
            android:background="@android:color/transparent"
            android:contentDescription="Save Changes"
            android:tint="@null"
            android:scaleType="fitCenter"
            tools:ignore="UseAppTint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>